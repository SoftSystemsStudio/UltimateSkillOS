# UltimateSkillOS Environment Variables
# Copy this file to .env and add your actual API keys
# NEVER commit .env to git - it's already in .gitignore

# OpenAI API Key (for GPT-4, GPT-3.5-turbo, etc.)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Anthropic Claude API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Alternative: Google Gemini API Key
GOOGLE_API_KEY=your-google-api-key-here

# Alternative: Local LLM endpoint (e.g., Ollama, LM Studio)
LOCAL_LLM_ENDPOINT=http://localhost:11434

# Default LLM Provider (openai, anthropic, google, local)
LLM_PROVIDER=openai

# Default Model Name
LLM_MODEL=gpt-4

# Optional: Redis URL for circuit breaker
REDIS_URL=redis://localhost:6379

# Optional: Application settings
DEBUG=false
LOG_LEVEL=INFO
